# ADD MacPorts to PATH
if [ "$UNAME" = Darwin ]; then

	PORTS='/opt/local'

	if [[ -d $PORTS/sbin ]];then
		PATH=$PORTS/sbin:${PATH}
		export PATH
	fi

	if [[ -d $PORTS/bin ]];then
		PATH=$PORTS/bin:${PATH}
		export PATH
	fi

	if [[ -d $PORTS/apache2/bin ]];then
		PATH=$PORTS/apache2/bin:${PATH}
		export PATH
	fi

	if [[ -d $PORTS/lib/postgresql83/bin ]];then
		PATH=$PORTS/lib/postgresql83/bin:${PATH}
		export PATH
	fi
fi
